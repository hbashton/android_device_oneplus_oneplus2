# su daemon
service su_daemon /system/xbin/su --daemon
    oneshot

on property:persist.sys.root_access=0
    stop su_daemon
    chmod 6755 /xbin/su
on property:persist.sys.root_access=2
    stop su_daemon
    chmod 6755 /xbin/su
on property:persist.sys.root_access=1
    start su_daemon
    chmod 6755 /xbin/su
on property:persist.sys.root_access=3
    start su_daemon
    chmod 6755 /xbin/su
